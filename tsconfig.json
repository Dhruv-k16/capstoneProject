{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node16", // Recommended modern module resolution
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015" // or "es2017", "es2020", "esnext", choose based on your target environment
    ],
    "target": "es2015", // Or a later ECMAScript version (es2017, es2020, etc.)
    "module": "Node16" // Or "commonjs", "amd", etc. Choose based on your bundler
  },
  "include": [
    "src/**/*"
  ]
}